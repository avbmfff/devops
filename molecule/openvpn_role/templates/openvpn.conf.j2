port {{ openvpn_port }}
proto {{ openvpn_protocol }}
dev tun
server {{ openvpn_network }} {{ openvpn_netmask }}
ifconfig-pool-persist ipp.txt
push "redirect-gateway def1"
push "dhcp-option DNS 8.8.8.8"
keepalive 10 120
cipher AES-256-CBC
auth SHA256
user {{ openvpn_user }}
group {{ openvpn_group }}
persist-key
persist-tun
status /var/log/openvpn-status.log
verb 3
